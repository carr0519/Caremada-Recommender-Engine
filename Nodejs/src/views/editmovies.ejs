<%- include('partials/header') %>

<div class="container mt-5">

  <h2>Edit Movie Record</h2><br><br>

  <form class="" action="/edit/movies" method="post">

    <div class="form-group">
      <label for="Title">Title</label>
      <input type="text" id="Title" name="Title" class="form-control" value="<%= record.Title %>" required>
    </div>

    <div class="form-group">
      <label for="Genre">Genre</label>
      <input type="text" id="Genre" name="Genre" class="form-control" value="<%= record.Genre %>" required>
    </div>

    <div class="form-group">
      <label for="Description">Description</label>
      <input type="text" id="Description" name="Description" class="form-control" value="<%= record.Description %>" required>
    </div>

    <div class="form-group">
      <label for="Director">Director</label>
      <input type="text" id="Director" name="Director" class="form-control" value="<%= record.Director %>" required>
    </div>

    <div class="form-group">
      <label for="Actors">Actors</label>
      <input type="text" id="Actors" name="Actors" class="form-control" value="<%= record.Actors %>" required>
    </div>

    <div class="form-group">
      <label for="Year">Year</label>
      <input type="number" min="1" step="1" id="Year" name="Year" class="form-control" value="<%= record.Year %>" required>
    </div>

    <div class="form-group">
      <label for="Runtime">Runtime (Minutes)</label>
      <input type="number" min="1" step="1" id="Runtime" name="Runtime" class="form-control" value="<%= record['Runtime (Minutes)'] %>" required>
    </div>

    <div class="form-group">
      <label for="Rating">Rating</label>
      <input type="number" min="0" max="10" step="any" id="Rating" name="Rating" class="form-control" value="<%= record.Rating %>" required>
    </div>

    <div class="form-group">
      <label for="Votes">Votes</label>
      <input type="number" min="0" step="1" id="Votes" name="Votes" class="form-control" value="<%= record.Votes %>" required>
    </div>

    <div class="form-group">
      <label for="Revenue">Revenue (Millions)</label>
      <input type="number" min="0" step="any" id="Revenue" name="Revenue" class="form-control" value="<%= record['Revenue (Millions)'] %>" required>
    </div>

    <div class="form-group">
      <label for="Metascore">Metascore</label>
      <input type="number" mnin="0" max="100" step="1" id="Metascore" name="Metascore" class="form-control" value="<%= record.Metascore %>" required>
    </div>

    <input type="hidden" id="_id" name="_id" class="" value="<%= record._id %>">

    <br>
    <button type="submit" class="btn btn-light" style="color:black">Submit</button>
  </form>

</div>

<%- include('partials/footer') %>
